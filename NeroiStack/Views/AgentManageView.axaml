<UserControl
	x:Class="NeroiStack.Views.AgentManageView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:fluenticons="using:FluentIcons.Avalonia"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:model="clr-namespace:NeroiStack.Component.Model"
	xmlns:vm="clr-namespace:NeroiStack.ViewModels"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:DataType="vm:AgentManageViewModel"
	mc:Ignorable="d">
	<UserControl.Styles>
		<Style Selector="Button.Link">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="5" />
			<Setter Property="Cursor" Value="Hand" />
		</Style>

		<!--  Card Style Matching HomeView  -->
		<Style Selector="Border.Card">
			<Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="Padding" Value="20" />
			<Setter Property="Margin" Value="0,0,20,20" />
			<Setter Property="Width" Value="300" />
			<Setter Property="Height" Value="180" />
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
				</Transitions>
			</Setter>
		</Style>
	</UserControl.Styles>

	<Grid>
		<Grid RowDefinitions="Auto, *">
			<!--  Header  -->
			<StackPanel Grid.Row="0" Margin="0,0,0,30">
				<Grid Margin="0,0,20,0" ColumnDefinitions="*, Auto">
					<TextBlock
						FontSize="32"
						FontWeight="Bold"
						Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
						Text="Agents" />
					<Button
						Grid.Column="1"
						Classes="accent"
						Command="{Binding CreateCommand}"
						Content="New Agent" />
				</Grid>
				<TextBlock
					Margin="0,8,0,0"
					FontSize="16"
					Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
					Opacity="0.6"
					Text="Create and configure AI agents to perform tasks." />
			</StackPanel>

			<!--  Content  -->
			<ScrollViewer Grid.Row="1" Padding="0,0,0,20">
				<ItemsControl ItemsSource="{Binding Agents}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Classes="Card">
								<Grid RowDefinitions="Auto, *, Auto">
									<Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">
										<!--  Icon  -->
										<Border
											Width="40"
											Height="40"
											Margin="0,0,12,0"
											VerticalAlignment="Top"
											Background="#204CAF50"
											CornerRadius="10">
											<fluenticons:SymbolIcon
												FontSize="20"
												Foreground="#4CAF50"
												Symbol="Person" />
										</Border>

										<StackPanel Grid.Column="1">
											<SelectableTextBlock
												FontSize="16"
												FontWeight="SemiBold"
												Text="{Binding Name}"
												TextTrimming="CharacterEllipsis" />
											<SelectableTextBlock
												FontSize="12"
												Opacity="0.6"
												Text="{Binding Kernel}" />
										</StackPanel>
										<Button
											Grid.Column="2"
											VerticalAlignment="Top"
											Classes="Link"
											Content="â‹®">
											<Button.Flyout>
												<MenuFlyout>
													<MenuItem
														Command="{Binding $parent[UserControl].((vm:AgentManageViewModel)DataContext).EditCommand}"
														CommandParameter="{Binding}"
														Header="Edit" />
													<MenuItem
														Command="{Binding $parent[UserControl].((vm:AgentManageViewModel)DataContext).DeleteCommand}"
														CommandParameter="{Binding}"
														Header="Delete" />
												</MenuFlyout>
											</Button.Flyout>
										</Button>
									</Grid>

									<SelectableTextBlock
										Grid.Row="1"
										Margin="0,12"
										FontSize="13"
										Opacity="0.7"
										Text="{Binding Description}"
										TextWrapping="Wrap" />

									<Grid Grid.Row="2" ColumnDefinitions="Auto, *">
										<ToggleSwitch
											Command="{Binding $parent[UserControl].((vm:AgentManageViewModel)DataContext).ToggleEnableCommand}"
											CommandParameter="{Binding}"
											IsChecked="{Binding IsEnabled}"
											OffContent="Off"
											OnContent="On" />
									</Grid>
								</Grid>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>

		<!--  Modal Overlay  -->
		<Grid Background="#AA000000" IsVisible="{Binding IsModalOpen}">
			<!--  Editor Modal  -->
			<model:UpsertAgentModal IsVisible="{Binding IsEditorVisible}" />

			<!--  Plugin Modal  -->
			<model:UpsertPluginModal IsVisible="{Binding IsPluginEditorVisible}" />

			<!--  Delete Confirmation  -->
			<Border
				Width="300"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
				BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
				BorderThickness="1"
				CornerRadius="8"
				IsVisible="{Binding IsDeleteConfirmVisible}">
				<Grid Margin="20" RowDefinitions="Auto, Auto, Auto">
					<SelectableTextBlock
						Grid.Row="0"
						FontSize="18"
						FontWeight="Bold"
						Text="Delete Agent" />
					<SelectableTextBlock
						Grid.Row="1"
						Margin="0,15"
						Text="Are you sure you want to delete this agent?" />
					<StackPanel
						Grid.Row="2"
						HorizontalAlignment="Right"
						Orientation="Horizontal"
						Spacing="10">
						<Button Command="{Binding CloseModalCommand}" Content="Cancel" />
						<Button
							Background="{DynamicResource SystemControlErrorTextForegroundBrush}"
							Command="{Binding ConfirmDeleteCommand}"
							Content="Delete"
							Foreground="{DynamicResource SystemControlBackgroundAltHighBrush}" />
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>
