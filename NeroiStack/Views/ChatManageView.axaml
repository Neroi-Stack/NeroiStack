<UserControl
	x:Class="NeroiStack.Views.ChatManageView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:fluenticons="using:FluentIcons.Avalonia"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:NeroiStack.ViewModels"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:DataType="vm:ChatManageViewModel"
	mc:Ignorable="d">
	<UserControl.Styles>
		<Style Selector="Button.Link">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="5" />
			<Setter Property="Cursor" Value="Hand" />
		</Style>

		<!--  Card Style Matching HomeView  -->
		<Style Selector="Border.Card">
			<Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="Padding" Value="20" />
			<Setter Property="Margin" Value="0,0,20,20" />
			<Setter Property="Width" Value="300" />
			<Setter Property="Height" Value="180" />
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
				</Transitions>
			</Setter>
		</Style>
	</UserControl.Styles>

	<Grid>
		<Grid RowDefinitions="Auto, *">
			<!--  Header  -->
			<StackPanel Grid.Row="0" Margin="0,0,0,30">
				<Grid Margin="0,0,20,0" ColumnDefinitions="*, Auto">
					<TextBlock
						FontSize="32"
						FontWeight="Bold"
						Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
						Text="Chat Classes" />
					<Button
						Grid.Column="1"
						Classes="accent"
						Command="{Binding CreateCommand}"
						Content="New Chat Class" />
				</Grid>
				<TextBlock
					Margin="0,8,0,0"
					FontSize="16"
					Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
					Opacity="0.6"
					Text="Manage your chat behaviors and agent orchestrations." />
			</StackPanel>

			<!--  Content  -->
			<ScrollViewer Grid.Row="1" Padding="0,0,0,20">
				<ItemsControl ItemsSource="{Binding Chats}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Classes="Card">
								<Grid RowDefinitions="Auto, *, Auto">
									<Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">
										<!--  Icon  -->
										<Border
											Width="40"
											Height="40"
											Margin="0,0,12,0"
											VerticalAlignment="Top"
											Background="#202196F3"
											CornerRadius="10">
											<fluenticons:SymbolIcon
												FontSize="20"
												Foreground="#2196F3"
												Symbol="SettingsChat" />
										</Border>

										<!--  Title and Date  -->
										<StackPanel Grid.Column="1">
											<SelectableTextBlock
												FontSize="16"
												FontWeight="SemiBold"
												Text="{Binding Name}"
												TextTrimming="CharacterEllipsis" />
											<SelectableTextBlock
												FontSize="12"
												Opacity="0.6"
												Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" />
										</StackPanel>

										<!--  Menu  -->
										<Button
											Grid.Column="2"
											VerticalAlignment="Top"
											Classes="Link"
											Content="⋮">
											<Button.Flyout>
												<MenuFlyout>
													<MenuItem
														Command="{Binding $parent[UserControl].((vm:ChatManageViewModel)DataContext).EditCommand}"
														CommandParameter="{Binding}"
														Header="Edit" />
													<MenuItem
														Command="{Binding $parent[UserControl].((vm:ChatManageViewModel)DataContext).DeleteCommand}"
														CommandParameter="{Binding}"
														Header="Delete" />
												</MenuFlyout>
											</Button.Flyout>
										</Button>
									</Grid>

									<!--  Description / Type  -->
									<SelectableTextBlock
										Grid.Row="1"
										Margin="0,12"
										FontSize="13"
										Opacity="0.7"
										Text="{Binding AgentOrchestrationType}"
										TextWrapping="Wrap" />

									<!--  Actions Footer  -->
									<Grid Grid.Row="2" ColumnDefinitions="Auto, *, Auto">
										<ToggleSwitch
											Command="{Binding $parent[UserControl].((vm:ChatManageViewModel)DataContext).ToggleEnableCommand}"
											CommandParameter="{Binding}"
											IsChecked="{Binding IsEnabled}"
											OffContent="Off"
											OnContent="On" />

										<Button
											Grid.Column="2"
											Padding="8,4"
											Classes="accent"
											Command="{Binding $parent[UserControl].((vm:ChatManageViewModel)DataContext).CreateInstanceCommand}"
											CommandParameter="{Binding}"
											Content="New Instance"
											FontSize="12"
											IsVisible="{Binding IsEnabled}" />
									</Grid>
								</Grid>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>

		<!--  Modal Overlay  -->
		<Grid Background="#AA000000" IsVisible="{Binding IsModalOpen}">
			<!--  Editor Modal  -->
			<Border
				Width="800"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
				BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
				BorderThickness="1"
				CornerRadius="8"
				IsVisible="{Binding IsEditorVisible}">
				<Grid Margin="20" RowDefinitions="Auto, *, Auto">
					<SelectableTextBlock
						Grid.Row="0"
						Margin="0,0,0,15"
						FontSize="20"
						FontWeight="Bold"
						Text="{Binding ModalTitle}" />

					<ScrollViewer Grid.Row="1" MaxHeight="600">
						<StackPanel Spacing="10">
							<!--  Top Form  -->
							<Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, Auto">
								<StackPanel Grid.Row="0" Grid.Column="0">
									<SelectableTextBlock Margin="0,0,0,5" Text="Name" />
									<TextBox Text="{Binding CurrentChat.Name}" />
								</StackPanel>

								<StackPanel Grid.Row="0" Grid.Column="2">
									<SelectableTextBlock Margin="0,0,0,5" Text="Orchestration Type" />
									<ComboBox
										HorizontalAlignment="Stretch"
										ItemsSource="{Binding AgentOrchestrationTypes}"
										SelectedItem="{Binding SelectedOrchestrationType}" />
								</StackPanel>
								<StackPanel
									Grid.Row="1"
									Grid.Column="0"
									Grid.ColumnSpan="3"
									Margin="0,10,0,0">
									<SelectableTextBlock
										Margin="0,5,0,0"
										FontSize="12"
										Foreground="Orange"
										Text="Note: Currently, only the single orchestration type support for short-term memory and streaming reply."
										TextWrapping="Wrap" />
								</StackPanel>
							</Grid>

							<!--  Dynamic Orchestration UI  -->
							<Border
								MinHeight="300"
								Margin="0,15,0,0"
								Padding="20"
								BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
								BorderThickness="1"
								CornerRadius="8">
								<Panel>
									<!--  1. Sequential Mode (Vertical Chain)  -->
									<StackPanel HorizontalAlignment="Center" IsVisible="{Binding IsSequentialMode}">
										<Border
											Margin="0,0,0,15"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Input" />
										</Border>
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />

										<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<StackPanel>
														<Border
															Width="250"
															Margin="0,5"
															Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
															BorderBrush="#555"
															BorderThickness="1"
															BoxShadow="0 2 4 0 #000000"
															CornerRadius="6">
															<Grid>
																<StackPanel Margin="15" Spacing="8">
																	<SelectableTextBlock
																		Margin="0,0,20,0"
																		FontWeight="SemiBold"
																		Foreground="#DDD"
																		Text="Step Agent" />
																	<ComboBox
																		HorizontalAlignment="Stretch"
																		ItemsSource="{Binding AvailableList}"
																		PlaceholderText="Select Agent..."
																		SelectedItem="{Binding SelectedAgent}" />
																	<Grid ColumnDefinitions="*, Auto">
																		<StackPanel Grid.Column="1" Orientation="Horizontal">
																			<Button
																				Classes="Link"
																				Command="{Binding MoveUpCommand}"
																				Content="↑"
																				FontSize="10" />
																			<Button
																				Classes="Link"
																				Command="{Binding MoveDownCommand}"
																				Content="↓"
																				FontSize="10" />
																		</StackPanel>
																	</Grid>
																</StackPanel>
																<Button
																	Margin="0,2,2,0"
																	Padding="5"
																	HorizontalAlignment="Right"
																	VerticalAlignment="Top"
																	Background="Transparent"
																	Command="{Binding RemoveCommand}"
																	Content="ｘ"
																	Cursor="Hand"
																	FontSize="16"
																	FontWeight="Bold"
																	Foreground="#FF5555" />
															</Grid>
														</Border>
														<SelectableTextBlock
															Margin="0,5"
															HorizontalAlignment="Center"
															FontSize="18"
															Foreground="#888"
															Text="↓" />
													</StackPanel>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>

										<Button
											Margin="0,15"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Step" />

										<Border
											Margin="0,5,0,0"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Output" />
										</Border>
									</StackPanel>

									<!--  2. Concurrent Mode (Fan Out - Fan In)  -->
									<StackPanel HorizontalAlignment="Center" IsVisible="{Binding IsConcurrentMode}">
										<Border
											Margin="0,0,0,10"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Input / Fork" />
										</Border>
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />

										<ScrollViewer
											Margin="0,0,0,20"
											HorizontalScrollBarVisibility="Auto"
											VerticalScrollBarVisibility="Disabled">
											<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
												<ItemsControl.ItemsPanel>
													<ItemsPanelTemplate>
														<StackPanel Orientation="Horizontal" Spacing="20" />
													</ItemsPanelTemplate>
												</ItemsControl.ItemsPanel>
												<ItemsControl.ItemTemplate>
													<DataTemplate>
														<Border
															Width="220"
															Margin="5,5,5,15"
															VerticalAlignment="Top"
															Background="#252526"
															BorderBrush="#555"
															BorderThickness="1"
															BoxShadow="0 2 4 0 #000000"
															CornerRadius="6">
															<Grid>
																<StackPanel Margin="15" Spacing="8">
																	<SelectableTextBlock
																		Margin="0,0,20,0"
																		FontWeight="SemiBold"
																		Foreground="#DDD"
																		Text="Parallel Agent" />
																	<ComboBox
																		HorizontalAlignment="Stretch"
																		ItemsSource="{Binding AvailableList}"
																		PlaceholderText="Select Agent..."
																		SelectedItem="{Binding SelectedAgent}" />
																</StackPanel>
																<Button
																	Margin="0,2,2,0"
																	Padding="5"
																	HorizontalAlignment="Right"
																	VerticalAlignment="Top"
																	Background="Transparent"
																	Command="{Binding RemoveCommand}"
																	Content="ｘ"
																	Cursor="Hand"
																	FontSize="16"
																	FontWeight="Bold"
																	Foreground="#FF5555" />
															</Grid>
														</Border>
													</DataTemplate>
												</ItemsControl.ItemTemplate>
											</ItemsControl>
										</ScrollViewer>

										<Button
											Margin="0,20"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Branch" />
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />

										<Border
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Join / Collector" />
										</Border>
									</StackPanel>

									<!--  3. Group Chat Mode  -->
									<StackPanel HorizontalAlignment="Center" IsVisible="{Binding IsGroupChatMode}">
										<Border
											Margin="0,0,0,20"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Group Manager / Hub" />
										</Border>
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />

										<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
											<ItemsControl.ItemsPanel>
												<ItemsPanelTemplate>
													<WrapPanel HorizontalAlignment="Center" ItemWidth="240" />
												</ItemsPanelTemplate>
											</ItemsControl.ItemsPanel>
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<Border
														Margin="10"
														Background="#252526"
														BorderBrush="#555"
														BorderThickness="1"
														BoxShadow="0 2 4 0 #000000"
														CornerRadius="6">
														<Grid>
															<StackPanel Margin="15" Spacing="8">
																<SelectableTextBlock
																	Margin="0,0,20,0"
																	FontWeight="SemiBold"
																	Foreground="#DDD"
																	Text="Participant" />
																<ComboBox
																	HorizontalAlignment="Stretch"
																	ItemsSource="{Binding AvailableList}"
																	PlaceholderText="Select Agent..."
																	SelectedItem="{Binding SelectedAgent}" />
															</StackPanel>
															<Button
																Margin="0,2,2,0"
																Padding="5"
																HorizontalAlignment="Right"
																VerticalAlignment="Top"
																Background="Transparent"
																Command="{Binding RemoveCommand}"
																Content="ｘ"
																Cursor="Hand"
																FontSize="16"
																FontWeight="Bold"
																Foreground="#FF5555" />
														</Grid>
													</Border>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>
										<Button
											Margin="0,20"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Participant" />
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />
										<Border
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Output" />
										</Border>
									</StackPanel>

									<!--  4. Magentic Mode  -->
									<StackPanel HorizontalAlignment="Center" IsVisible="{Binding IsMagenticMode}">
										<Border
											Margin="0,0,0,20"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Orchestrator Ledger" />
										</Border>
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />

										<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
											<ItemsControl.ItemsPanel>
												<ItemsPanelTemplate>
													<WrapPanel HorizontalAlignment="Center" ItemWidth="240" />
												</ItemsPanelTemplate>
											</ItemsControl.ItemsPanel>
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<Border
														Margin="10"
														Background="#252526"
														BorderBrush="#555"
														BorderThickness="1"
														BoxShadow="0 2 4 0 #000000"
														CornerRadius="6">
														<Grid>
															<StackPanel Margin="15" Spacing="8">
																<SelectableTextBlock
																	Margin="0,0,20,0"
																	FontWeight="SemiBold"
																	Foreground="#DDD"
																	Text="Worker / Tool" />
																<ComboBox
																	HorizontalAlignment="Stretch"
																	ItemsSource="{Binding AvailableList}"
																	PlaceholderText="Select Agent..."
																	SelectedItem="{Binding SelectedAgent}" />
															</StackPanel>
															<Button
																Margin="0,2,2,0"
																Padding="5"
																HorizontalAlignment="Right"
																VerticalAlignment="Top"
																Background="Transparent"
																Command="{Binding RemoveCommand}"
																Content="ｘ"
																Cursor="Hand"
																FontSize="16"
																FontWeight="Bold"
																Foreground="#FF5555" />
														</Grid>
													</Border>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>
										<Button
											Margin="0,20"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Worker" />
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />
										<Border
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Output" />
										</Border>
									</StackPanel>

									<!--  5. Single / Default / Handoff Mode  -->
									<StackPanel HorizontalAlignment="Center" IsVisible="{Binding IsSingleMode}">
										<Border
											Margin="0,0,0,20"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Single Agent Execution" />
										</Border>
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />
										<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<Border
														Width="300"
														Margin="0,5"
														Background="#252526"
														BorderBrush="#555"
														BorderThickness="1"
														BoxShadow="0 4 8 0 #000000"
														CornerRadius="6">
														<Grid>
															<StackPanel Margin="20" Spacing="15">
																<SelectableTextBlock
																	Margin="0,0,20,0"
																	FontSize="14"
																	FontWeight="SemiBold"
																	Foreground="#DDD"
																	Text="Primary Agent" />
																<ComboBox
																	HorizontalAlignment="Stretch"
																	ItemsSource="{Binding AvailableList}"
																	PlaceholderText="Select Agent..."
																	SelectedItem="{Binding SelectedAgent}" />
															</StackPanel>
															<Button
																Margin="0,2,2,0"
																Padding="5"
																HorizontalAlignment="Right"
																VerticalAlignment="Top"
																Background="Transparent"
																Command="{Binding RemoveCommand}"
																Content="ｘ"
																Cursor="Hand"
																FontSize="16"
																FontWeight="Bold"
																Foreground="#FF5555" />
														</Grid>
													</Border>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>
										<Button
											Margin="0,20"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Agent"
											IsVisible="{Binding ConfiguredAgents.Count, Converter={x:Static ObjectConverters.IsNull}}" />
										<!--  Hacky way to hide button? Or just leave it.  -->
										<SelectableTextBlock
											Margin="0,5"
											HorizontalAlignment="Center"
											FontSize="18"
											Foreground="#888"
											Text="↓" />
										<Border
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Output" />
										</Border>
									</StackPanel>

									<StackPanel
										MaxWidth="500"
										HorizontalAlignment="Center"
										IsVisible="{Binding IsHandoffMode}">
										<!--  Nodes Section  -->
										<Border
											Margin="0,0,0,20"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Participating Agents (Nodes)" />
										</Border>
										<ItemsControl ItemsSource="{Binding ConfiguredAgents}">
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<Border
														Margin="0,5"
														Background="#252526"
														BorderBrush="#555"
														BorderThickness="1"
														CornerRadius="6">
														<Grid>
															<StackPanel Margin="15" Spacing="8">
																<Grid ColumnDefinitions="*, Auto">
																	<SelectableTextBlock
																		FontWeight="SemiBold"
																		Foreground="#DDD"
																		Text="State/Node" />
																	<StackPanel Grid.Column="1" Orientation="Horizontal">
																		<Button
																			Classes="Link"
																			Command="{Binding MoveUpCommand}"
																			Content="↑" />
																		<Button
																			Classes="Link"
																			Command="{Binding MoveDownCommand}"
																			Content="↓" />
																	</StackPanel>
																</Grid>
																<ComboBox
																	HorizontalAlignment="Stretch"
																	ItemsSource="{Binding AvailableList}"
																	PlaceholderText="Select Agent..."
																	SelectedItem="{Binding SelectedAgent}" />
																<CheckBox
																	Content="Is Entry Point"
																	FontSize="11"
																	IsChecked="{Binding IsPrimary}" />
															</StackPanel>
															<Button
																Margin="0,2,2,0"
																Padding="5"
																HorizontalAlignment="Right"
																VerticalAlignment="Top"
																Background="Transparent"
																Command="{Binding RemoveCommand}"
																Content="ｘ"
																Cursor="Hand"
																FontSize="16"
																FontWeight="Bold"
																Foreground="#FF5555" />
														</Grid>
													</Border>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>
										<Button
											Margin="0,10,0,20"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddAgentCommand}"
											Content="+ Add Node" />

										<!--  Edges Section  -->
										<Border
											Height="1"
											Margin="0,10,0,20"
											Background="#3E3E42" />
										<Border
											Margin="0,0,0,20"
											Padding="20,8"
											HorizontalAlignment="Center"
											Background="#444"
											CornerRadius="15">
											<SelectableTextBlock FontWeight="Bold" Text="Handoff Rules (Transitions)" />
										</Border>
										<ItemsControl ItemsSource="{Binding ConfiguredHandoffs}">
											<ItemsControl.ItemTemplate>
												<DataTemplate>
													<Border
														Margin="0,5"
														Background="#333333"
														BorderBrush="#555"
														BorderThickness="1"
														CornerRadius="6">
														<Grid Margin="10" RowDefinitions="Auto, Auto">
															<Grid ColumnDefinitions="*, Auto, *, Auto">
																<!--  From  -->
																<StackPanel Grid.Column="0">
																	<SelectableTextBlock
																		Margin="0,0,0,2"
																		FontSize="10"
																		Foreground="#AAA"
																		Text="From" />
																	<ComboBox
																		HorizontalAlignment="Stretch"
																		ItemsSource="{Binding AvailableList}"
																		PlaceholderText="Source"
																		SelectedItem="{Binding SelectedFromAgent}" />
																</StackPanel>

																<!--  Arrow  -->
																<SelectableTextBlock
																	Grid.Column="1"
																	Margin="10,15,10,0"
																	VerticalAlignment="Center"
																	FontSize="16"
																	Foreground="#888"
																	Text="→" />

																<!--  To  -->
																<StackPanel Grid.Column="2">
																	<SelectableTextBlock
																		Margin="0,0,0,2"
																		FontSize="10"
																		Foreground="#AAA"
																		Text="To" />
																	<ComboBox
																		HorizontalAlignment="Stretch"
																		ItemsSource="{Binding AvailableList}"
																		PlaceholderText="Target"
																		SelectedItem="{Binding SelectedToAgent}" />
																</StackPanel>

																<!--  Remove  -->
																<Button
																	Grid.Column="3"
																	Margin="10,15,0,0"
																	VerticalAlignment="Center"
																	Background="Transparent"
																	Command="{Binding RemoveCommand}"
																	Content="ｘ"
																	Cursor="Hand"
																	FontWeight="Bold"
																	Foreground="#FF5555" />
															</Grid>

															<!--  Description  -->
															<TextBox
																Grid.Row="1"
																Margin="0,10,0,0"
																FontSize="12"
																Text="{Binding Description}"
																Watermark="Transition Condition / Description" />
														</Grid>
													</Border>
												</DataTemplate>
											</ItemsControl.ItemTemplate>
										</ItemsControl>
										<Button
											Margin="0,10,0,0"
											HorizontalAlignment="Center"
											Classes="accent"
											Command="{Binding AddHandoffCommand}"
											Content="+ Add Transition" />
									</StackPanel>
								</Panel>
							</Border>
						</StackPanel>
					</ScrollViewer>

					<StackPanel Grid.Row="2" Margin="0,15,0,0">
						<!--  Validation Message  -->
						<SelectableTextBlock
							MaxWidth="500"
							Margin="0,0,0,10"
							HorizontalAlignment="Right"
							FontWeight="SemiBold"
							Foreground="#FF5555"
							IsVisible="{Binding IsValidationMessageVisible}"
							Text="{Binding ValidationMessage}"
							TextWrapping="Wrap" />

						<StackPanel
							HorizontalAlignment="Right"
							Orientation="Horizontal"
							Spacing="10">
							<Button Command="{Binding CloseModalCommand}" Content="Cancel" />
							<Button
								Classes="accent"
								Command="{Binding SaveCommand}"
								Content="Save" />
						</StackPanel>
					</StackPanel>
				</Grid>
			</Border>

			<!--  Delete Confirmation  -->
			<Border
				Width="300"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
				BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
				BorderThickness="1"
				CornerRadius="8"
				IsVisible="{Binding IsDeleteConfirmVisible}">
				<Grid Margin="20" RowDefinitions="Auto, Auto, Auto">
					<SelectableTextBlock
						Grid.Row="0"
						FontSize="18"
						FontWeight="Bold"
						Text="Delete Chat Class" />
					<SelectableTextBlock
						Grid.Row="1"
						Margin="0,15"
						Text="Are you sure you want to delete this chat class?" />
					<StackPanel
						Grid.Row="2"
						HorizontalAlignment="Right"
						Orientation="Horizontal"
						Spacing="10">
						<Button Command="{Binding CloseModalCommand}" Content="Cancel" />
						<Button
							Background="{DynamicResource SystemControlErrorTextForegroundBrush}"
							Command="{Binding ConfirmDeleteCommand}"
							Content="Delete"
							Foreground="{DynamicResource SystemControlBackgroundAltHighBrush}" />
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>
